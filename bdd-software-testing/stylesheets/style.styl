@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,600');
@import 'nib';

body {
  padding: 0;
  margin: 0;
  font: 19px "Open Sans", "Lucida Grande", Helvetica, Arial, sans-serif;
  font-weight: 300;
}

a {
  color: #00B7FF;
}

.blob {
  box-sizing: border-box;
}

.clearfix {
  clearfix();
}

h1, h2, h3, h4, h5, h6 {
  font-family: "Open Sans", "Lucida Grande", Helvetica Neue, Arial, sans-serif;
  text-transform: uppercase;
  color: #333333;
  letter-spacing: -0.07em;
  line-height: 1em;
}

.text-orange {
  color: #F88A09;
  font-weight: bold;
}
.text-blue {
  color: #336da6;
  font-weight: bold;
}
.text-green {
  color: #aaf200;
  font-weight: bold;
}

#header {
  box-sizing: border-box;
  height: 40px;
  padding: 5px 0;
  img {
    margin-left: -52px;
  }
}

#hero {
  background-color: #141414;
  color: #b1b0af;

  .testbash img {
    position: absolute;
    top: 0;
    right: 0;
    border: 0;
    z-index: 17;
  }

  h1, h2 {
    font-family: "Open Sans", "Lucida Grande", Helvetica Neue, Arial, sans-serif;
    text-transform: uppercase;
    color: #dcdbdb;
    margin: 0;
    letter-spacing: 0;
    font-size: 2.5em;
    line-height: 1em;
  }

  h2 {
    font-size: 1.5em;
  }

  p {
    margin-top: 40px;
  }

  .cta {
    margin-top: 40px;
    display: inline-block;
  }
}

#strap {
  font-size: 1.8em;
  padding: 40px 0;
}

#why {
  padding: 40px 0;
  background-color: #F7F4DC;
  border-top: 1px solid #dad7bf;

  .cta {
    margin-top: 40px;
    display: inline-block;
  }

  .row {
    margin-top: 20px;
  }

  .strap {
    font-size: 1.8em;
  }

  .huge {
    display: inline-block;
    margin-bottom: 30px;
  }
  .title {
    margin: 0 0 40px 0;
  }
}

#what {
  padding: 40px 0;
  border-top: 1px solid #dad7bf;
  h3, h4 {
    color: #333333;
  }
  .divided {
    margin: 10px 0;
    padding: 10px 0;
    border: 1px solid #cccccc;
    border-left: none;
    border-right: none;
  }
  .huge {
    display: inline-block;
    margin-bottom: 30px;
  }
  .row {
    margin: 20px 0 0 0;
  }
  .cta {
    margin-top: 40px;
    display: inline-block;
  }
}

#solution {
  color: #b1b0af;
  padding: 40px 0;
  background-color: #141414;
  border-top: 1px solid #343434;
  h1 {
    color: #aaf200;
    margin: 0 0 20px 0;
  }
  h2 {
    color: #dcdbdb;
    margin: 0;
  }
  h3 {
    color: #dcdbdb;
    margin-top: 40px;
  }
}

#behave {
  padding: 40px 0;
  background-color: white;
  border-top: 1px solid #c7c7c7;
  h1 {
    text-transform: none;
    font-size: 3em;
    margin: 0;
  }
  h2 {
    margin: 0;
  }
  h3 {
    margin-bottom: 30px;
  }
  h5 {
    margin: 20px 0 5px 0;
  }
  h5:first-child {
    margin: 0 0 5px 0;
  }
  .title {
    margin-bottom: 40px;
  }
  .span2 {
    width: 100px;
  }
  form {
    margin: 0;
  }
  label {
    clear: both;
  }
  input {
    float: right;
  }
  .buttons {
    margin-top: 40px;
    a { margin-right: 20px; }
  }
}

#footer {
  height: 100px;
  background-color: #141414;
  border-top: 1px solid #91908f;
  color: #b1b0af;
  address {color: #777777; font-style:normal; font-size:12px; line-height:1.3em; text-align:center; padding: 10px; margin: 0}
  address .org {font-weight:bold; font-size: 14px; margin-bottom: 5px}
  a {color: #b1b0af; text-decoration: none;}
}

.box {
  display: block;
  margin: 0 auto;
  padding: 0 10px;
  position: relative;
  width: 960px;
}

@font-face {
  font-family: 'icomoon-essential';
  src:url('fonts/icomoon-essential.eot');
  src:url('fonts/icomoon-essential.eot?#iefix') format('embedded-opentype'),
  url('fonts/icomoon-essential.woff') format('woff'),
  url('fonts/icomoon-essential.ttf') format('truetype'),
  url('fonts/icomoon-essential.svg#icomoon-essential') format('svg');
  font-weight: normal;
  font-style: normal;
}

.huge {
  font-family: 'icomoon-essential';
  font-size: 100px;
}

.icon-bug:before, .icon-rulers:before, .icon-tools:before, .icon-construction:before {
  font-family: 'icomoon-essential';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
}
.icon-bug:before {
  content: "\41";
}
.icon-rulers:before {
  content: "\42";
}
.icon-tools:before {
  content: "\21";
}
.icon-construction:before {
  content: "\22";
}
